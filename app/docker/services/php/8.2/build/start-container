#!/usr/bin/env bash

set -e

role=${CONTAINER_ROLE:-app}
env=${APP_ENV:-local}
wwwname=${WWWNAME:-'www-data'}

if [ ! -z "$WWWUSER" ]; then
    usermod -u $WWWUSER $wwwname
fi

if [ ! -d /.composer ]; then
    mkdir /.composer
fi

chmod -R ugo+rw /.composer

if [ "$role" = "app" ]; then
    cd /var/www/html/ && php artisan october:migrate && php artisan plugin:remove Lovata.BaseCode --force && php artisan quicksilver:clear && composer run-script post-autoload-dump

    printf "\n\nFix permissions...\n\n"
    chown -hR $wwwname:$wwwname /var/www/html/storage

    printf "\n\nStarting PHP daemon...\n\n"
    php-fpm --daemonize

    printf "Starting Nginx...\n\n"
    set -e
    if [[ "$1" == -* ]]; then
        set -- nginx -g daemon off; "$@"
    fi

    exec "$@"
elif [ "$role" = "queue" ]; then
    echo "Running the queue..."
    gosu $WWWUSER php /var/www/html/artisan queue:work --verbose --tries=3 --timeout=90
elif [ "$role" = "scheduler" ]; then
    while [ true ]
    do
        gosu $WWWUSER php /var/www/html/artisan schedule:run --verbose --no-interaction & sleep 60
    done
fi
