{
	"compilerOptions": {
		"module": "es2020",
		"target": "ESNext",
		"lib": ["ESNext", "DOM"],
		"esModuleInterop": true,
		"strict": true,
		"strictNullChecks": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"skipLibCheck": true
	},
	"exclude": ["**/dist", "**/node_modules"]
}
